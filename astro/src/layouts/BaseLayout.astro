---
import Header from "@components/global/Header.astro";
import Footer from "@components/global/Footer.astro";
import "@bootstrap/dist/css/bootstrap.min.css";
import "../styles/style.css";

interface Props {
  pageTitle: string | null | undefined;
}

const standardTitle = "Dog Food Prices: Find the best prices for your pooch's favourite food"
let { pageTitle = standardTitle } = Astro.props;

if (pageTitle !== standardTitle) {
  pageTitle = `${pageTitle} Â· ${standardTitle}`
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="Awin" content="Awin" /
    <link rel="sitemap" href="/sitemap-index.xml">
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
