---
import backgroundImage from "@assets/images/hero/banner-bg.png";
import bannerImage from "@assets/images/hero/banner-image.png";
import { Image } from "@astrojs/image/components";
import { Icon } from "astro-icon";
const backgroundImageCss = `url(${backgroundImage.src})`;
---

<style define:vars={{ backgroundImageCss }}>
  .hero3 .hero-wrapper .banner-content h1 {
    text-transform: none !important;
  }

  @media (max-width: 991px) {
    .mb-120 {
      margin-bottom: 120px !important;
    }
  }

  .hero3 .hero-wrapper {
    background-image: var(--backgroundImageCss) !important;
  }

  [astro-icon="marquee-foot"] {
    margin-left: 20px;
    margin-right: 20px;
    vertical-align: baseline;
    height: 35px;
    width: 35px;
  }

  .marquee_text {
    text-align: center;
  }

  @media (max-width: 576px) {
    [astro-icon="marquee-foot"] {
      display: none;
    }
  }
</style>

<div class="hero3 mb-120">
  <div class="background-text">
    <h2 class="marquee_text">
      <Icon name="marquee-foot" />
      Save up to 15% on RRP
      <Icon name="marquee-foot" />
    </h2>
  </div>
  <div class="swiper hero3-slider">
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <div class="hero-wrapper">
          <div class="container">
            <div class="row align-items-center">
              <div class="col-lg-6">
                <div class="banner-content">
                  <h1>Save money on quality food for your best friend</h1>
                </div>
              </div>
              <div class="col-lg-6 d-flex justify-content-end">
                <div class="hero-img">
                  <Image
                    class="img-fluid banner-imgas"
                    src={bannerImage}
                    height={405}
                    width={358}
                    alt="Orange and tan puppy; sitting down; looking to our right"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
