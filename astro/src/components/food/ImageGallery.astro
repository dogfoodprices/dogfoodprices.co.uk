---
import type { SanityImage } from "../../utils/api/food";
import { urlForImage } from "../../utils/image";

interface Props {
  front: SanityImage | null | undefined;
  back: SanityImage | null | undefined;
}
const { front, back } = Astro.props;

const largeImageHeight = 420;
const thumbnailImageHeight = 110;
---

<div class="col-lg-6">
  <div class="tab-content tab-content1" id="v-pills-tabContent">
    {
      front && (
        <div
          class="tab-pane fade active show"
          id="v-pills-front"
          role="tabpanel"
          aria-labelledby="v-pills-front-tab"
        >
          <img
            class="img-fluid"
            src={urlForImage(front, largeImageHeight)}
            alt="Front of packaging"
          />
        </div>
      )
    }
    {
      back && (
        <div
          class="tab-pane fade"
          id="v-pills-back"
          role="tabpanel"
          aria-labelledby="v-pills-back-tab"
        >
          <img
            class="img-fluid"
            src={urlForImage(back, largeImageHeight)}
            alt="Back of packaging"
          />
        </div>
      )
    }
  </div>

  <div
    class="nav nav1 nav-pills"
    id="v-pills-tab"
    role="tablist"
    aria-orientation="vertical"
  >
    <button
      class="nav-link active"
      id="v-pills-front-tab"
      data-bs-toggle="pill"
      data-bs-target="#v-pills-front"
      type="button"
      role="tab"
      aria-controls="v-pills-front"
      aria-selected="true"
      aria-label="Front of packaging"
    >
      <img src={urlForImage(front, thumbnailImageHeight)} alt="" />
    </button>
    {
      back && (
        <button
          class="nav-link"
          id="v-pills-back-tab"
          data-bs-toggle="pill"
          data-bs-target="#v-pills-back"
          type="button"
          role="tab"
          aria-controls="v-pills-back"
          aria-selected="false"
          aria-label="Back of packaging"
        >
          <img src={urlForImage(back, thumbnailImageHeight)} alt="" />
        </button>
      )
    }
  </div>
</div>

<script>
  import "@bootstrap/js/src/tab";
</script>
